macro is "greet_user" using ai is "codegen":
  description "Generate a flow that greets the user by asking their name."
  sample "flow is \"greet\":\n  step is \"hi\":\n    ask user for \"Name\" as name\n    log info \"hi\""

use macro is "greet_user"

use macro is "crud_ui" with:
  entity is "Example"
  fields:
    field is "name":
      type is "string"
      required is true
