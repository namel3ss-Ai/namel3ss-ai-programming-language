flow is "scoring":
  step is "compute score":
    let base be 10
    let bonus be 5
    let total be base plus bonus

    if total is greater than 10:
      do agent "notify"

flow is "collections":
  step is "aggregate":
    let scores be [3, 1, 2]
    let sorted_scores be sorted form of scores
    let high_scores be scores:
      keep rows where row > 1
    let total be sum(scores)

    repeat for each s in scores:
      set total to total + s

    do tool "echo"

flow is "strings":
  step is "cleanup":
    let title be "  Hello World!  "
    let trimmed be trim of title
    let slug be slugify of title
    do tool "echo"
