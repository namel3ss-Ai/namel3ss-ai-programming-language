memory profile is "conversational_short":
  kinds:
    short_term

model "gpt-4.1-mini":
  provider "dummy"

ai is "support_agent":
  model is "gpt-4.1-mini"
  use memory profile "conversational_short"
  memory:
    kinds:
      short_term:
        window is 32

flow is "handle_ticket":
  description "Listens for a ticket and responds with the support agent AI"
  step is "respond":
    ai is "support_agent"
