app is "agents-flows":
  entry_page is "home"

page is "home" at "/":
  section "info":
    heading "Agents + Flows demo"
    text "Run the orchestrate flow to see AI + agent steps executed."

model "default":
  provider "dummy"

agent "writer":
  goal "Write a short statement about a topic."

flow is "orchestrate":
  step is "branch":
    kind "ai"
    target "decide"
  step is "fanout":
    kind "agent"
    target "writer"
  step is "join":
    kind "tool"
    target "echo"

ai is "decide":
  model "default"
  input from "user_input"
