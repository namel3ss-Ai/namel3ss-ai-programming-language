app is "agents-flows":
  entry_page is "home"

page is "home" at "/":
  section "info":
    heading "Agents + Flows demo"
    text "Run the orchestrate flow to see AI + agent steps executed."

model is "default":
  provider is "dummy"

agent is "writer":
  goal "Write a short statement about a topic."

flow is "orchestrate":
  step is "branch":
    kind is "ai"
    target is "decide"
  step is "fanout":
    kind is "agent"
    target is "writer"
  step is "join":
    kind is "tool"
    target is "echo"

ai is "decide":
  model is "default"
  input from "user_input"
