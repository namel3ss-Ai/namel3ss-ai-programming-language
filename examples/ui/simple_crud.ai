flow is "list_items":
  step is "fetch" kind "tool" target "echo" message "list"

flow is "create_item":
  step is "create" kind "tool" target "echo" message "create"

page is "items" at "/items":
  heading "Items"
  text "A simple CRUD surface"

  button "New item":
    on click:
      do flow "create_item"

  when true:
    show:
      text "Listing items..."

page is "item_detail" at "/items/:id":
  heading "Detail"
  text "Details will go here."
