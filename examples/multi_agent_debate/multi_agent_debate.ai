memory "debate_memory":
  type "conversation"

model "debate-llm":
  provider "openai"

agent is \"pro_agent":
  goal "Argue in favor of the topic with concise reasoning."
  personality "optimistic and evidence-focused"

agent is \"con_agent":
  goal "Argue against the topic highlighting risks or gaps."
  personality "skeptical and pragmatic"

agent is \"judge_agent":
  goal "Review both sides and deliver a short verdict."
  personality "neutral and structured"

flow is "debate_flow":
  description "Coordinate a short debate with pro, con, and judge roles."
  step is "pro_turn":
    kind "agent"
    target "pro_agent"
  step is "con_turn":
    kind "agent"
    target "con_agent"
  step is "judge_verdict":
    kind "agent"
    target "judge_agent"

app is "debate_app":
  entry_page is "debate"
  description "Multi-agent debate system with a judge rendering verdicts."

page is "debate":
  route "/debate"
  title "Debate Console"
  section "context":
    component "text":
      value "Use debate_flow to run a structured pro/con discussion with a judge verdict."
  section "actions":
    component "text":
      value "Trigger debate_flow to start the conversation."
