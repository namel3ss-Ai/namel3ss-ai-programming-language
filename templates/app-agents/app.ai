app is "agents-demo":
  entry_page is "home"

model is "default":
  provider is "dummy"

agent is "summarizer":
  goal is "Summarize a topic in one sentence."

flow is "orchestrate":
  step is "plan":
    kind is "agent"
    target is "summarizer"
  step is "reflect":
    kind is "tool"
    target is "echo"

page is "home" at "/":
  section is "summary":
    component "text":
      value is "Agents demo"
