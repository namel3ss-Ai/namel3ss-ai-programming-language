app is "agents-demo":
  entry_page "home"

page is "home":
  route "/"
  section "summary":
    component "text":
      value "Agents demo"

model "default":
  provider "dummy"

agent is "summarizer":
  goal "Summarize a topic in one sentence."

flow is "orchestrate":
  step "plan":
    kind "agent"
    target "summarizer"
  step "reflect":
    kind "tool"
    target "echo"
