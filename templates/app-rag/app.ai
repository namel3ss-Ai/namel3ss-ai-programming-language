app is "docs":
  entry_page "home"

page is "home":
  route "/"
  section "upload":
    component "file-upload":
      value "Upload a document"
  section "query":
    component "form":
      value "Enter your question"

model "default":
  provider "dummy"

ai is "rewrite":
  model "default"
  input from user_input

flow is "answer":
  step "rewrite":
    kind "ai"
    target "rewrite"
  step "echo":
    kind "tool"
    target "echo"
